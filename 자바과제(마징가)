        g.fillArc(395, 212, 210, 220, 0, 360);
        g.setColor(Color.BLACK);
        g.drawLine(460,222, 500,30);
        g.drawLine(540,222, 500,30);
        g.drawArc(395, 212, 210, 220, 0, 360);

