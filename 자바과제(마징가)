        Polygon Headgear1 = new Polygon();
        Headgear1.addPoint(285,430);
        Headgear1.addPoint(300,430);
        Headgear1.addPoint(430,440);
        Headgear1.addPoint(430,340);
        for(int i = 1; i<6;i++)
        {
            Headgear1.addPoint(430-12*i,340-2*i*i);
        }
        Headgear1.addPoint(355,150);
        for(int i = 1;i<7;i++)
        {
            if(i<=5)
            {
                Headgear1.addPoint(355-3*i*i,150-5*i);
            }
            else
            {
                Headgear1.addPoint(355-5*i*i,120+i);
            }
        }
        Headgear1.addPoint(180,330);
        

